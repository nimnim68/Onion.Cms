@model Onion.Cms.Domain.User.Dtos.ChangePasswordDto
@inject IResourceManager _resourceManager

@{
    ViewData["Title"] = _resourceManager[SharedResource.ChangePassword];
}

<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">@_resourceManager[SharedResource.HomePage]</a></li>
                        <li>@_resourceManager[SharedResource.ChangePassword]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="customer_login mt-32">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="account_form register">
                    <h2>
                        @_resourceManager[SharedResource.ChangePassword]
                        <i class="fa fa-frown-open"></i>
                    </h2>
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <form asp-action="ChangePassword" asp-controller="Account" method="post">
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="CurrentPassword"></label>
                                <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="رمز عبور فعلی" aria-describedby="email-address">
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="NewPassword"></label>
                                <input asp-for="NewPassword" type="password" class="form-control" placeholder="رمز عبور جدید" aria-describedby="email-address">
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="RePassword"></label>
                                <input asp-for="RePassword" type="password" class="form-control" placeholder="رمز عبور جدید" aria-describedby="email-address">
                                <span asp-validation-for="RePassword" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="login_submit">
                                <button class="btn btn-outline-success" type="submit">
                                    <span class="fa fa-check-circle"></span>
                                    @_resourceManager[SharedResource.SendBtn]
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>