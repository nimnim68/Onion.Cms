@using Store.Blazor.Shared.Models
<div class="single_blog">
    <div class="blog_thumb">
        <a href="blog-details.html"><img src="@(Post.ImageUrl)" alt=""></a>
    </div>
    <div class="blog_content">
        <h3><a href="blog-details.html">@(Post.Title) </a></h3>
        <div class="blog_meta">
            <span class="post_date"><i class="fa-calendar fa"></i> 5 آبان 1399</span>
            <span class="author"><i class="fa fa-user-circle"></i> پست شده توسط  @(Post.UserTitle)</span>
            <span class="category">
                <i class="fa fa-folder-open"></i>
                <a href="#"> @(Post.CategoryName)</a>
            </span>
        </div>
        <div class="blog_desc">
            <p>@(Post.Description)</p>
        </div>
        <div class="readmore_button">
            <a href="blog-details.html">ادامه مطلب</a>
        </div>
    </div>
</div>

@code{
    [Parameter] public PostInfo Post { get; set; }
}